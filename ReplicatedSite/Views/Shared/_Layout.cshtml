<!DOCTYPE html>
<!--[if lt IE 7]>      <html lang="en" class="lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="en" class="lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="en" class="lt-ie9"> <![endif]-->
<!--[if IE 9]>         <html lang="en" class="ie9"> <![endif]-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no">
    <meta name="mobileoptimized" content="0" />

    <title>@ViewBag.Title</title>

    <link rel="home" id="apppath" href="@Request.ApplicationPath" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="~/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="~/apple-touch-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="~/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="~/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="~/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="~/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="~/apple-touch-icon-152x152.png" />

    <link href="~/Content/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/styles/scaffolding.min.css" rel="stylesheet" />
    <link href="~/Content/styles/site.min.css" rel="stylesheet" />

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="@Url.Content("~/Content/scripts/vendor/jquery.js")"><\/script>')</script>

    <!--[if lt IE 9]>
        <script src="~/Content/scripts/vendor/html5shiv.js"></script>
        <script src="~/Content/scripts/vendor/respond.js"></script>
    <![endif]-->
    <!--[if lte IE 8]>
        <script src="~/Content/scripts/vendor/excanvas.js"></script>
    <![endif]-->
    @RenderSection("header", required: false)
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("index", "home")">Home</a></li>
                    <li><a href="@Url.Action("about", "home")">About</a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li class="dropdown">
                        <a href="@Url.Action("index", "account")" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (!Request.IsAuthenticated)
                            {
                                <li><div style="padding: 5px 10px;"><a href="@Url.Action("login", "account")" class="btn btn-primary btn-block">Sign In</a></div></li>
                                <li class="divider"></li>
                            }
                            <li><a href="@Url.Action("index", "account")">Your Account</a></li>
                            <li><a href="@Url.Action("orders", "account")">Your Orders</a></li>
                            <li><a href="@Url.Action("wishlist", "account")">Your Wish List</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                <li class="divider"></li>
                                <li><a href="@Url.Action("logout", "account")">Sign Out</a></li>
                            }
                        </ul>
                    </li>
                </ul>



            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <!-- Vendor Libraries -->
    <script src="~/Content/scripts/vendor/handlebars.js"></script>
    <script src="~/Content/scripts/vendor/bootstrap.js"></script>
    <script src="~/Content/scripts/vendor/modernizr.js"></script>

    <!-- Exigo Scripts -->
    <script src="~/Content/scripts/app/app.js"></script>
    <script src="~/Content/scripts/app/custom.js"></script>
    <script src="~/Content/scripts/app/bindings.js"></script>

    <!-- Page Scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>