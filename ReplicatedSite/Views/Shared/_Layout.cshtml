    <meta name="mobileoptimized" content="0" />

    <title>@ViewBag.Title</title>

    <link rel="home" id="apppath" href="@Request.ApplicationPath" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
